<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.denimexpertexpo.denimexpo.Activities.FeedbackActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/light_ash"
        android:background="@drawable/registration_form_title_style"

        android:paddingTop="@dimen/feedback_title_vertical_padding"
        android:paddingBottom="@dimen/feedback_title_vertical_padding"
        android:paddingLeft="@dimen/feedback_title_horizontal_padding"
        android:layout_marginTop="@dimen/feedback_per_item_internal_margin"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_name_field"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView"

        android:background="@drawable/signup_login_edit_text_style"
        android:paddingTop="@dimen/feedback_title_text_vertical_padding"
        android:paddingBottom="@dimen/feedback_title_text_vertical_padding"
        android:paddingLeft="@dimen/feedback_title_horizontal_padding"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/textView2"
        android:layout_below="@+id/feedback_name_field"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/feedback_name_field"
        android:textColor="@color/light_ash"
        android:background="@drawable/registration_form_title_style"

        android:paddingTop="@dimen/feedback_title_vertical_padding"
        android:paddingBottom="@dimen/feedback_title_vertical_padding"
        android:paddingLeft="@dimen/feedback_title_horizontal_padding"
        android:layout_marginTop="@dimen/feedback_per_item_internal_margin"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/feedback_email_field"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView2"


        android:background="@drawable/signup_login_edit_text_style"
        android:paddingTop="@dimen/feedback_title_text_vertical_padding"
        android:paddingBottom="@dimen/feedback_title_text_vertical_padding"
        android:paddingLeft="@dimen/feedback_title_horizontal_padding"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comment"
        android:id="@+id/textView3"
        android:layout_below="@+id/feedback_email_field"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/feedback_email_field"
        android:textColor="@color/light_ash"
        android:background="@drawable/registration_form_title_style"

        android:paddingTop="@dimen/feedback_title_vertical_padding"
        android:paddingBottom="@dimen/feedback_title_vertical_padding"
        android:paddingLeft="@dimen/feedback_title_horizontal_padding"
        android:layout_marginTop="@dimen/feedback_per_item_internal_margin"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/feedback_comment_field"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView3"
        android:layout_above="@+id/feedback_rating_field"

        android:gravity="top|left"

        android:background="@drawable/signup_login_edit_text_style"
        android:paddingTop="@dimen/feedback_title_text_vertical_padding"
        android:paddingBottom="@dimen/feedback_title_text_vertical_padding"
        android:paddingLeft="@dimen/feedback_title_horizontal_padding"
        android:paddingRight="@dimen/feedback_title_horizontal_padding"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/feedback_send_button"
        android:layout_alignEnd="@+id/feedback_comment_field"
        android:layout_toEndOf="@+id/feedback_rating_field"
        android:layout_below="@+id/feedback_comment_field"

        android:layout_marginTop="@dimen/feedback_per_item_internal_margin"
        android:layout_alignParentBottom="true"

        android:background="@drawable/button_login_signup_selector"
        android:padding="@dimen/signup_top_button_padding"
        android:textColor="#303f54"
        android:textStyle="bold"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_rating_field"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:layout_marginTop="@dimen/feedback_per_item_internal_margin"

        />
</RelativeLayout>
