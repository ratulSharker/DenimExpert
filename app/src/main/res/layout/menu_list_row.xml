<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_list_image"

        android:layout_margin="15dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Title"
        android:id="@+id/menu_list_title"
        android:layout_alignTop="@+id/menu_list_image"
        android:layout_toRightOf="@+id/menu_list_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="sub-title"
        android:id="@+id/menu_list_sub_title"

        android:layout_alignBottom="@+id/menu_list_image"
        android:layout_alignLeft="@+id/menu_list_title"
        android:layout_alignStart="@+id/menu_list_title"
        android:layout_below="@+id/menu_list_title"
        android:layout_alignRight="@+id/menu_list_title"
        android:layout_alignEnd="@+id/menu_list_title"

        android:paddingTop="10dp"
        />
</RelativeLayout>
