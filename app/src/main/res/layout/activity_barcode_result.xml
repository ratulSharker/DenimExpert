<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.denimexpertexpo.denimexpo.Activities.BarcodeResultActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/person_image" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView"
        android:background="@drawable/barcode_result_textfield_style"
        android:gravity="center"

        android:paddingBottom="@dimen/barcode_result_textview_vertical_padding"

        android:paddingLeft="@dimen/barcode_result_textview_horizontal_padding"
        android:paddingRight="@dimen/barcode_result_textview_horizontal_padding"
        android:paddingTop="@dimen/barcode_result_textview_vertical_padding"

        android:layout_marginRight="@dimen/activity_horizontal_margin"


        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"


        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/barcode_inter_textview_vertical_gap"
        android:layout_toLeftOf="@+id/imageView"
        android:background="@drawable/barcode_result_textfield_style"

        android:gravity="center"

        android:paddingBottom="@dimen/barcode_result_textview_vertical_padding"

        android:paddingLeft="@dimen/barcode_result_textview_horizontal_padding"
        android:paddingRight="@dimen/barcode_result_textview_horizontal_padding"

        android:paddingTop="@dimen/barcode_result_textview_vertical_padding"
        android:text="ID"

        android:textAppearance="?android:attr/textAppearanceMedium"

        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="@dimen/barcode_inter_textview_vertical_gap"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:background="@drawable/barcode_result_textfield_style"

        android:gravity="center"

        android:paddingBottom="@dimen/barcode_result_textview_vertical_padding"

        android:paddingLeft="@dimen/barcode_result_textview_horizontal_padding"
        android:paddingRight="@dimen/barcode_result_textview_horizontal_padding"

        android:paddingTop="@dimen/barcode_result_textview_vertical_padding"
        android:text="Contact"


        android:textAppearance="?android:attr/textAppearanceMedium"

        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="@dimen/barcode_inter_textview_vertical_gap"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:background="@drawable/barcode_result_textfield_style"


        android:gravity="center"

        android:paddingBottom="@dimen/barcode_result_textview_vertical_padding"

        android:paddingLeft="@dimen/barcode_result_textview_horizontal_padding"
        android:paddingRight="@dimen/barcode_result_textview_horizontal_padding"

        android:paddingTop="@dimen/barcode_result_textview_vertical_padding"
        android:text="Designation"

        android:textAppearance="?android:attr/textAppearanceMedium"

        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="@dimen/barcode_inter_textview_vertical_gap"
        android:background="@drawable/barcode_result_textfield_style"

        android:gravity="center"
        android:paddingBottom="@dimen/barcode_result_textview_vertical_padding"
        android:paddingLeft="@dimen/barcode_result_textview_horizontal_padding"
        android:paddingRight="@dimen/barcode_result_textview_horizontal_padding"

        android:paddingTop="@dimen/barcode_result_textview_vertical_padding"
        android:text="42/1 Patil badi road, Narshingdi"

        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="@dimen/barcode_inter_textview_vertical_gap"
        android:background="@drawable/barcode_result_textfield_style"


        android:gravity="center"
        android:paddingBottom="@dimen/barcode_result_textview_vertical_padding"

        android:paddingLeft="@dimen/barcode_result_textview_horizontal_padding"
        android:paddingRight="@dimen/barcode_result_textview_horizontal_padding"

        android:paddingTop="@dimen/barcode_result_textview_vertical_padding"
        android:text="Other Info"

        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="@dimen/barcode_inter_textview_vertical_gap"
        android:background="@drawable/barcode_result_textfield_style"

        android:gravity="center"
        android:paddingBottom="@dimen/barcode_result_textview_vertical_padding"

        android:paddingLeft="@dimen/barcode_result_textview_horizontal_padding"
        android:paddingRight="@dimen/barcode_result_textview_horizontal_padding"

        android:paddingTop="@dimen/barcode_result_textview_vertical_padding"
        android:text="Other info 2"

        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
