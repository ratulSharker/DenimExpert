<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    tools:context="com.denimexpertexpo.denimexpo.Activities.BarcodeActivity">

    <TextView
        android:id="@+id/barcode_status_text"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="25dp"

        android:background="@drawable/barcode_status_style"
        android:gravity="center"

        android:padding="20dp"

        android:text="Scanning"
        android:textIsSelectable="false"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/barcode_preview_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/barcode_status_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ff0000"

        android:orientation="horizontal">


    </LinearLayout>


</RelativeLayout>
