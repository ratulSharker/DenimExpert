<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.denimexpertexpo.denimexpo">


    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        tools:replace="icon,label">
        <activity
            android:name=".Activities.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.SignupLoginActivity"
            android:label="@string/title_activity_signup_login"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar"></activity>
        <activity
            android:name=".Activities.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@android:style/Theme.Holo.NoActionBar"></activity>
        <activity
            android:name=".Activities.BarcodeActivity"
            android:label="@string/title_activity_barcode"
            android:parentActivityName=".Activities.MainMenuActivity"></activity>
        <activity
            android:name=".Activities.BarcodeResultActivity"
            android:label="@string/title_activity_barcode_result"
            android:parentActivityName=".Activities.BarcodeActivity"></activity>
        <activity
            android:name=".Activities.RegisrtationActivity"
            android:label="@string/title_activity_regisrtation"
            android:parentActivityName=".Activities.SignupLoginActivity"></activity>
    </application>

</manifest>
